<div class="row"> 
  <div class="col s12"> 

    <% if (locals.items.length == 0) { %>
      <form method="post" action="/dive">
        <div class="row">
          <div class="input-field col l8 m8 s8 offset-l2 offset-m2 offset-s2">
            <input id="tweet_search" name="searchText" class="validate" type="text" autocomplete="off">
            <label class="active" for="tweet_search">Search Hashtags...</label>
          </div>
          <div class="input-field col l2 m2 s2">
            <button class="waves-effect waves-light blue btn" type="submit">Dive</button>
          </div>
        </div>
      </form>
    <% } %>

<% if (!!locals.diveCrumbs.length) { %>
    <section class="search-buttons row amber darken-1">

      <nav class="amber darken-1">
        <div class="nav-wrapper">
          <div class="col s12">
              <form method="post" action="/dive">

                <% for(var i=0; i < diveCrumbs.length; i++) {%>
                  <input type="hidden" name="searchText" value="<%= diveCrumbs[i] %>">
                  
                  <% if (i == 0) { %>
                    <a href="/dive/<%= diveCrumbs[i] %>">#<%= diveCrumbs[i] %></a>
                  <% } else { %>
                    <a href="/dive/<%= diveCrumbs[i] %>" class="breadcrumb">#<%= diveCrumbs[i] %></a>
                  <% } %>   

                <% } %>

              </form>
          </div>
        </div>
      </nav>

    </section>
<% } %>      



<% if (locals.siblingTags) { %>
    <section class="search-buttons row">

          <% for(var i=0; i < siblingTags.length; i++) {%>
            <form method="post" action="/dive">

              <input type="hidden" name="searchText" value="<%= siblingTags[i] %>">
              <button class="col s2 waves-effect waves-light btn indigo" type="submit">
                  <%= siblingTags[i] %>
              </button>
            </form>
          <% } %>

    </section>
<% } %>


  </div>
</div>
